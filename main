const { Client, GatewayIntentBits } = require('discord.js');
const fetch = require('node-fetch');

// Set environment variables in Railway dashboard
const DISCORD_BOT_TOKEN = process.env.DISCORD_BOT_TOKEN;
const N8N_WEBHOOK_URL = process.env.N8N_WEBHOOK_URL;
const TARGET_CHANNEL_ID = process.env.TARGET_CHANNEL_ID; // optional: limit to one channel

const client = new Client({
  intents: [
    GatewayIntentBits.Guilds,
    GatewayIntentBits.GuildMessages,
    GatewayIntentBits.MessageContent
  ]
});

client.on('ready', () => {
  console.log(`‚úÖ Bot logged in as ${client.user.tag}`);
});

client.on('messageCreate', async (message) => {
  if (message.author.bot) return; // ignore bots
  if (TARGET_CHANNEL_ID && message.channel.id !== TARGET_CHANNEL_ID) return; // filter channel

  try {
    await fetch(N8N_WEBHOOK_URL, {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({
        id: message.id,
        channel_id: message.channel.id,
        author: {
          id: message.author.id,
          username: message.author.username,
          discriminator: message.author.discriminator
        },
        content: message.content,
        timestamp: message.createdAt
      })
    });
    console.log(`üì© Forwarded message: ${message.content}`);
  } catch (err) {
    console.error("‚ùå Error forwarding message:", err);
  }
});

client.login(DISCORD_BOT_TOKEN);
